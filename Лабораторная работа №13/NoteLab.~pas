program NoteLab;

{$APPTYPE CONSOLE}

uses
  SysUtils,
  Windows;

Var isEnd: boolean;
	i : Integer;
Type work = Record
	 name: String;
	 pay: Integer;
   end;
	list = Array[1..10] of work;
  worker: work;
begin
SetConsoleCP(1251);
SetConsoleOutPutCP(1251);
writeln('>>NoteLab начал работу');
i := 0;
isEnd := true;
while(isEnd<>false) do
	begin
		i := i + 1;
		writeln('Введите имя рабочего: '); readln(worker.name);
		writeln('Введите зарплату ',list[i].name,': '); readln(worker.pay);
    list[i] := worker;
		writeln('Добавить работника?(y/n): '); readln(answer);
		if(answer<>'n') then isEnd := false;
	end;
writeln('‚ывод по фильтру: Имя начинаетсЯ с *А или С*');
for i to 10 do
	if ((AnsiPos('А', list[i].name)<>0) or (AnsiPos('С', list[i].name)<>0)) then
		begin	
			println('Имя работника: ', list[i].name);
			println('Зарплата работника: ', list[i].pay);
		end	
Readln;
end.
