program CalculateLab_II;

{$APPTYPE CONSOLE}

uses
  SysUtils,
  Windows;

Var x, y, i, sum:Real;
begin
SetConsoleCP(1251);
SetConsoleOutPutCP(1251);
y := 0;
x := -3;
i := 0;
writeln('>>CalculateLab_II начал работу...');
writeln('>>Вычисляются значения функции f(x)=x^2+15x+8 на промежутке от -3 до 3');
while(x<3) do
	begin
	y := sqr(x) + 15*x +8;
	x := x + 0.2;
	if(x>0)	then write(' ',y:2:2,'| ')
	else write(y:2:2,'| ');	
	i := i + 1;
	if(i = 5) then 
		begin 
			writeln;
			i := 0;
		end;
	end;	
writeln('>>CalculateLab закончил работу');
write('>>');
Readln;
end.

